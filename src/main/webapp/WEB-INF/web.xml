<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
                             http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.example.FirstServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/test-servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FirstJSP</servlet-name>
        <jsp-file>/testJsp.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstJSP</servlet-name>
        <url-pattern>/jsp-file</url-pattern>
    </servlet-mapping>
</web-app>
